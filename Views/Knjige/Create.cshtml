@model EvidencijaKnjiga.Models.Knjiga

@{
    ViewData["Title"] = "Create";
}

<h4>Novi unos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GodinaIzdanja" class="control-label"></label>
                <input asp-for="GodinaIzdanja" class="form-control" />
                <span asp-validation-for="GodinaIzdanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutorID" class="control-label"></label>
                <select asp-for="AutorID" class ="form-control" asp-items="ViewBag.AutorID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
