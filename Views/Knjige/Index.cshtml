@model IEnumerable<EvidencijaKnjiga.Models.Knjiga>

@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Novi unos</a>
    </p>
}
<form typeof="get">
    Pretraga:
    <input type="search" name="search" />
    <input type="submit" value="Traži" />
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GodinaIzdanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GodinaIzdanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor.Ime)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Opis)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Uredi</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Detalji</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Obriši</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
